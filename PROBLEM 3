#include<iostream>
#include<iomanip>
#include<cmath>

using namespace std;

int main()
{
	int x;
	int y;
	double z;
	double v;
	
	z = 2.5;
	
	cout << "Enter Value for x: ";
	cin >> x;
	cout << "Enter Value for y: ";
	cin >> y;

switch(x)

{
	case 1:
		if (y < 5 && y > 1)
		cout << "V = " << setw(10) << setprecision(2) << fixed << x*y*z;
		else if (y>=5) 
			cout << "V = " << setw(10) << setprecision(2) << fixed << x+y/z; 
		else if (y <= 1)
				cout <<	"V = " << setw(10) << setprecision(2) << fixed << x+y+z;
 		break;
 		
 	case 2:
 		if (y<=5)
			cout << "V = " << setw(10) << setprecision(2) << fixed << abs((x-y)/z);
		else if (y>5)
			cout << "V = " << setw(10) << setprecision(2) << fixed << x - (sqrt(y+z)); 
		break;
		
		default:
	 		cout << "V = " << setw(10) << setprecision(2) << fixed << x+y+z;
			break;		
}	
	
	return 0;
	
}
